<div class="container">
	<div class="jumbotron text-center">
		<h2>The Doggy Rate Community</h2>
	</div>
</div>

<% @users.each do |user| %>
	<div class="container">
		<h3><%= link_to user.name, user_path(user) %></h3>
		<h4>Owner of:</h4>
		<div class="row">
			
			<% user.dogs.each do |dog| %>
				<div class="col-sm-4 text-center">
				<%= link_to "#{dog.name} the #{dog.breed}", dog_path(dog) %><br>
				<%= image_tag "#{dog.picture}", class: "small-image"%><br>
				</div>
			<% end %>
		</div>	
	</div>	
<% end %>