<div class="container">
	<div class="jumbotron text-center">
		<h2>The Doggy Rate Community</h2>
	</div>
</div>

<% @users.each do |user| %>
	<div class="container">
		<h3><%= link_to user.name, user_path(user) %></h3>
		<% if user.has_dogs? %>
		<h4>Owner of:</h4>
		<% else %>
		<p>hasn't added a dog yet...</p>
		<% end %>
		<div class="row">
			<% user.dogs.each do |dog| %>
				<div class="col-sm-4">
				<%= link_to "#{dog.name} the #{dog.breed}", dog_path(dog) %><br>
					<div class="media">
				  		<div class="media-left">
				    	<%= image_tag(dog.picture.image.url, class: 'media-object super-small-image') %>
				  		</div>
					</div>
				</div>
			<% end %>
		</div>	
	</div>	
<% end %>

